<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<div class="panel panel-default">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  </div>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post,  class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_post_path(post),   class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', post,  class: "btn btn-default",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path,  class: "btn btn-default" %>
